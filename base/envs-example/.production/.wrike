#------------------------------------------------------------------------------
# WRIKE_API RELATED
#------------------------------------------------------------------------------
client_id={client_id}
client_secret={client_secret}
host=https://www.wrike.com
authorization_base_url=https://login.wrike.com/oauth2/authorize/v4
token_url=https://login.wrike.com/oauth2/token
refresh_url=https://login.wrike.com/oauth2/token
# !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
# !!!!!!!!!! Verify the `redirect_uri` for host parameter
redirect_uri=http://localhost
# !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
# !!!!!!!!!! Verify the following urls for host parameter
# https://developers.wrike.com/oauth-20-authorization/
# 3.Exchanging authorization code for access token, host parameter
profile_url=https://www.wrike.com/api/v4/contacts?me=true
all_tasks=https://www.wrike.com/api/v4/tasks
space_id={spaceId}
projects_url=https://www.wrike.com/api/v4/spaces/{spaceId}/folders?project=True
task_url=https://www.wrike.com/api/v4/folders/{folderId}/tasks?sortField=UpdatedDate&sortOrder=Desc
workflow_url =https://www.wrike.com/api/v4/workflows
custom_field_url=https://www.wrike.com/api/v4/customfields
# !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
permanent_token={permanent_token}
